{
  "name": "vanta",
  "version": "0.5.2",
  "description": "3D animated backgrounds for your website",
  "main": "dist/vanta.js",
  "scripts": {
    "build": "node ./webpack.build.js && lessc src/styles.less gallery/styles.css",
