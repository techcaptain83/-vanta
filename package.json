    "dev": "webpack-dev-server"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tengbao/vanta"
  },
  "keywords": [
    "animation",
    "3d",
    "three",
    "threejs",
    "background",
    "canvas",
    "javascript",
    "webgl"
  ],
  "author": "Teng Bao",
  "license": "MIT",
  "devDependencies": {
    "glslify": "^6.1.0",
    "glslify-loader": "^2.0.0",
    "less": "^3.9.0",
    "raw-loader": "^0.5.1",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.8.0"
  }
}
